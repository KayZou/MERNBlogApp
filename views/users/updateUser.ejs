<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Fontawesome -->
    <script
      src="https://kit.fontawesome.com/42a182743f.js"
      crossorigin="anonymous"
    ></script>
    <!-- CSS -->
    <link rel="stylesheet" href="/css/form.css" />
    <title>Update Profile</title>
  </head>
  <body>
  <%-include("../partials/navbar")%>
    <div class="form-container">
      <!-- icon -->
      <h1>
        Update Profile
        <i class="fas fa-edit"></i>
      </h1>

      <%if(error){%>
      <small class="error">
        <i class="fas fa-exclamation-circle"></i>
        <%=error%>
      </small>
      <%}%>
      <form action="/api/v1/users/update?_method=PUT" method="POST">
        <!-- full name -->
        <label for="fullName">Full Name</label>
        <input type="text" name="fullName" id="name" value="<%= userData && userData?.fullName %>"/>
        <!-- email -->
        <label for="email">Email</label>
        <input type="email" name="email" id="email" value="<%= userData && userData?.email %>"/>

        <button type="submit">Update</button>

        <p>Already have an account? <a href="/api/v1/users/profile">Go Back</a></p>
      </form>
    </div>
  <%-include("../partials/footer")%>
  </body>
</html>
