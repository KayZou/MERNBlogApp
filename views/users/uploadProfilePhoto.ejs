<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Fontawesome -->
    <script
      src="https://kit.fontawesome.com/42a182743f.js"
      crossorigin="anonymous"
    ></script>
    <!-- CSS -->
    <link rel="stylesheet" href="/css/uploadPhoto.css" />
    <title>Upload Profile Photo</title>
  </head>
  <body>
  <%-include("../partials/navbar")%>
    <div class="form-container">
      <!-- icon -->
      <h1>Upload Profile photo</h1>
      <p>
        <!-- upload icon -->
      </p>
      <%if(error){%>
      <small class="error">
        <i class="fas fa-exclamation-circle"></i>
        <%=error%>
      </small>
      <%}%>
      <form action="/api/v1/users/update-profile-image?_method=PUT" method="POST" enctype="multipart/form-data">
        <label for="profileImage">Select Image</label>
        <input type="file" name="profileImage" id="image" />
        <button type="submit">
          <i class="fas fa-upload"></i>
          Submit
        </button>
      </form>
    </div>
  <%-include("../partials/footer")%>
  </body>
</html>
