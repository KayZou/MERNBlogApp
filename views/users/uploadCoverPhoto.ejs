  <!-- CSS -->
  <link rel="stylesheet" href="/css/uploadPhoto.css" />
  <title>Upload Cover Photo</title>
</head>
<body>
<%-include("../partials/navbar")%>
<div class="form-container">
  <!-- icon -->
  <h1>Upload Cover photo</h1>
  <p>
    <!-- upload icon -->
    <svg xmlns="http://www.w3.org/2000/svg" height="16" width="16" viewBox="0 0 512 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2023 Fonticons, Inc.--><path d="M288 109.3V352c0 17.7-14.3 32-32 32s-32-14.3-32-32V109.3l-73.4 73.4c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3l128-128c12.5-12.5 32.8-12.5 45.3 0l128 128c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L288 109.3zM64 352H192c0 35.3 28.7 64 64 64s64-28.7 64-64H448c35.3 0 64 28.7 64 64v32c0 35.3-28.7 64-64 64H64c-35.3 0-64-28.7-64-64V416c0-35.3 28.7-64 64-64zM432 456a24 24 0 1 0 0-48 24 24 0 1 0 0 48z"/></svg>
  </p>
  <%if(error){%>
  <small class="error">
    <i class="fas fa-exclamation-circle"></i>
    <%=error%>
  </small>
  <%}%>
  <form action="/api/v1/users/update-cover-image?_method=PUT" method="POST" enctype="multipart/form-data">
    <label for="coverImage">Select Image</label>
    <input type="file" name="coverImage" id="image" />
    <button type="submit">
      <svg xmlns="http://www.w3.org/2000/svg" height="16" width="40" viewBox="0 0 512 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2023 Fonticons, Inc.--><path d="M288 109.3V352c0 17.7-14.3 32-32 32s-32-14.3-32-32V109.3l-73.4 73.4c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3l128-128c12.5-12.5 32.8-12.5 45.3 0l128 128c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L288 109.3zM64 352H192c0 35.3 28.7 64 64 64s64-28.7 64-64H448c35.3 0 64 28.7 64 64v32c0 35.3-28.7 64-64 64H64c-35.3 0-64-28.7-64-64V416c0-35.3 28.7-64 64-64zM432 456a24 24 0 1 0 0-48 24 24 0 1 0 0 48z"/></svg>
      Submit
    </button>
  </form>
</div>
<%-include("../partials/footer")%>
</body>
</html>
