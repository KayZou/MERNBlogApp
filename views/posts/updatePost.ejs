<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Fontawesome -->
    <script
      src="https://kit.fontawesome.com/42a182743f.js"
      crossorigin="anonymous"
    ></script>
    <!-- CSS -->
    <link rel="stylesheet" href="/css/form.css" />
    <title>Update Post</title>
  </head>
  <body>
  <%-include("../partials/navbar")%>
    <div class="form-container">
      <!-- icon -->
      <h1>
        Update Post
        <!-- add icon -->
        <i class="fas fa-plus"></i>
      </h1>
      <%if(error){%>
      <small class="error">
        <i class="fas fa-exclamation-circle"></i>
        <%=error%>
      </small>
      <%}%>
      <form action="/api/v1/posts/<%=post?._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
        <!-- Post Title -->
        <div class="input-wrapper">
          <label for="title">Post Title</label>
          <input type="text" name="title" id="title" value="<%=post?.title%>"/>
          <!-- err -->
        </div>

        <!-- Category -->
        <div class="input-wrapper">
          <label for="category">Category</label>
          <select name="category" id="category">
            <option value="reactJS" <%= post?.category === 'reactJS' ? 'selected' : '' %>>reactJS</option>
            <option value="html" <%= post?.category === 'html' ? 'selected' : '' %>>html</option>
            <option value="css" <%= post?.category === 'css' ? 'selected' : '' %>>css</option>
            <option value="NodeJS" <%= post?.category === 'NodeJS' ? 'selected' : '' %>>NodeJS</option>
            <option value="JS" <%= post?.category === 'JS' ? 'selected' : '' %>>JS</option>
            <option value="other" <%= post?.category === 'other' ? 'selected' : '' %>>other</option>
          </select>
          <!-- err -->
        </div>
        <div class="input-wrapper">
          <!-- Post Body -->
          <label for="description">Post Description</label>
          <textarea name="description" id="description" cols="30" rows="10"><%=post?.description%></textarea>
          <!-- err -->
        </div>
        <!-- Post Image -->
        <div class="input-wrapper">
          <label for="image">Post Image</label>
          <input type="file" name="image" id="image" />
          <!-- err -->
        </div>

        <button type="submit">Update</button>
      </form>
    </div>
  <%-include("../partials/footer")%>
  </body>
</html>
